<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ProductLineDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.title != null and params.title != ''">
				and title = #{params.title} 
			</if>
			<if test="params.detail != null and params.detail != ''">
				and detail = #{params.detail} 
			</if>
			<if test="params.img != null and params.img != ''">
				and img = #{params.img} 
			</if>
			<if test="params.remark != null and params.remark != ''">
				and remark = #{params.remark} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from product_line t
		<include refid="where" />
	</select>

	<select id="list" resultType="ProductLine">
		select * from product_line t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update product_line t
		<set>
			<if test="title != null">
				title = #{title}, 
			</if>
			<if test="detail != null">
				detail = #{detail}, 
			</if>
			<if test="img != null">
				img = #{img}, 
			</if>
			<if test="remark != null">
				remark = #{remark}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
